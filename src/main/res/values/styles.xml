<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="NewApi">

  <!--
      Base application theme, dependent on API level. This theme is
      replaced by AppBaseTheme from res/values-vXX/styles.xml on newer
      devices.
  -->
  <style name="AppBaseTheme" parent="android:Theme.Material">
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->

    <item name="android:windowOptOutEdgeToEdgeEnforcement">true</item>

  </style>

  <!-- Application theme. -->
  <style name="AppTheme" parent="AppBaseTheme">
    <!--
        All customizations that are NOT specific to a particular
        API-level can go here.
    -->

    <item name="pref_wifi">@drawable/ic_wifi_white_24dp</item>
    <item name="pref_roaming">@drawable/ic_cellular_white_24dp</item>
    <item name="pref_widget">@drawable/ic_list_white_24dp</item>
    <item name="pref_digits">@drawable/ic_sort_white_24dp</item>
    <item name="pref_fill">@drawable/ic_image_white_24dp</item>
    <item name="pref_theme">@drawable/ic_brightness_high_white_24dp</item>
    <item name="pref_about">@drawable/ic_info_outline_white_24dp</item>

  </style>

  <!--
      Base application theme, dependent on API level. This theme is
      replaced by AppBaseTheme from res/values-vXX/styles.xml on newer
      devices.
  -->
  <style name="AppLightBaseTheme" parent="android:Theme.Material.Light.DarkActionBar">
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->

    <item name="android:windowOptOutEdgeToEdgeEnforcement">true</item>

  </style>

  <!-- Application theme. -->
  <style name="AppLightTheme" parent="AppLightBaseTheme">
    <!--
        All customizations that are NOT specific to a particular
        API-level can go here.
    -->

    <item name="pref_wifi">@drawable/ic_wifi_black_24dp</item>
    <item name="pref_roaming">@drawable/ic_cellular_black_24dp</item>
    <item name="pref_widget">@drawable/ic_list_black_24dp</item>
    <item name="pref_digits">@drawable/ic_sort_black_24dp</item>
    <item name="pref_fill">@drawable/ic_image_black_24dp</item>
    <item name="pref_theme">@drawable/ic_brightness_high_black_24dp</item>
    <item name="pref_about">@drawable/ic_info_outline_black_24dp</item>

  </style>

  <style name="DialogBaseTheme" parent="android:Theme.Material.Dialog">
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->
  </style>

  <style name="DialogTheme" parent="DialogBaseTheme">
    <!--
        All customizations that are NOT specific to a particular
        API-level can go here.
    -->
  </style>

  <style name="DialogLightBaseTheme" parent="android:Theme.Material.Light.Dialog">
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->
  </style>

  <style name="DialogLightTheme" parent="DialogLightBaseTheme">
    <!--
        All customizations that are NOT specific to a particular
        API-level can go here.
    -->
  </style>

</resources>
