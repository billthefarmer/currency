<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!--
      Base application theme, dependent on API level. This theme is
      replaced by AppBaseTheme from res/values-vXX/styles.xml on newer
      devices.
  -->
  <style name="AppBaseTheme" parent="android:Theme.Holo">
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->
  </style>

  <!-- Application theme. -->
  <style name="AppTheme" parent="AppBaseTheme">
    <!--
        All customizations that are NOT specific to a particular
        API-level can go here.
    -->

    <item name="pref_wifi">@drawable/ic_pref_wifi</item>
    <item name="pref_roaming">@drawable/ic_pref_roaming</item>
    <item name="pref_digits">@drawable/ic_pref_digits</item>
    <item name="pref_fill">@drawable/ic_pref_fill</item>
    <item name="pref_dark">@drawable/ic_pref_dark</item>
    <item name="pref_about">@drawable/ic_pref_about</item>

  </style>

  <!--
      Base application theme, dependent on API level. This theme is
      replaced by AppBaseTheme from res/values-vXX/styles.xml on newer
      devices.
  -->
  <style name="AppLightBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->
  </style>

  <!-- Application theme. -->
  <style name="AppLightTheme" parent="AppLightBaseTheme">
    <!--
        All customizations that are NOT specific to a particular
        API-level can go here.
    -->

    <item name="pref_wifi">@drawable/ic_pref_wifi_light</item>
    <item name="pref_roaming">@drawable/ic_pref_roaming_light</item>
    <item name="pref_digits">@drawable/ic_pref_digits_light</item>
    <item name="pref_fill">@drawable/ic_pref_fill_light</item>
    <item name="pref_dark">@drawable/ic_pref_dark_light</item>
    <item name="pref_about">@drawable/ic_pref_about_light</item>

  </style>

  <style name="DialogBaseTheme" parent="android:Theme.Holo.Dialog">
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->
  </style>

  <style name="DialogTheme" parent="DialogBaseTheme">
    <!--
        All customizations that are NOT specific to a particular
        API-level can go here.
    -->
  </style>

  <style name="DialogLightBaseTheme" parent="android:Theme.Holo.Light.Dialog">
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->
  </style>

  <style name="DialogLightTheme" parent="DialogLightBaseTheme">
    <!--
        All customizations that are NOT specific to a particular
        API-level can go here.
    -->
  </style>

</resources>
